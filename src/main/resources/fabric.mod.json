{
  "schemaVersion": 1,
  "id": "unloadedactivity",
  "version": "${version}",

  "custom": {
    "loom:injected_interfaces": {
      "net/minecraft/block/AbstractBlock": ["com/github/inzan17/SimulateChunkBlocks"],
      "net/minecraft/block/entity/BlockEntity": ["com/github/inzan17/SimulateBlockEntity", "com/github/inzan17/BlockEntityTimeData"],
      "net/minecraft/entity/Entity": ["com/github/inzan17/SimulateEntity"],
      "net/minecraft/world/chunk/Chunk": ["com/github/inzan17/ChunkTimeData"],
      "net/minecraft/server/world/ServerWorld": ["com/github/inzan17/GetWeatherState"]
    },
    "lithium:options": {
      "world.block_entity_ticking.sleeping.furnace": false
    }
  },

  "name": "Unloaded Activity",
  "description": "Make certain blocks such as crops grow as if they've always grown when put into simulation distance.",
  "authors": [
    "Zan"
  ],
  "contact": {
    "homepage": "https://zanspace.lol",
    "sources": "https://github.com/InZan17/Unloaded-Activity-Fabric",
    "issues": "https://github.com/InZan17/Unloaded-Activity-Fabric/issues"
  },

  "license": "GNU LGPLv3",
  "icon": "assets/unloadedactivity/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "com.github.inzan17.UnloadedActivity"
    ],
    "modmenu": [
      "com.github.inzan17.config.UnloadedActivityModMenu"
    ]
  },
  "mixins": [
    "unloadedactivity.mixins.json"
  ],

  "depends": {
    "fabricloader": "*",
    "fabric-api": "*",
    "minecraft": "${compatible_versions}",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}
